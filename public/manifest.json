{
  "name": "Trombinosko",
  "version": "1.0.0",
  "description": "Apprenez à reconnaître vos élèves",
  "manifest_version": 2,
  "author": "Thomas Poirier",
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Trombinosko",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
